<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RicoPaRico" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RicoPaRico.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RicoPaRico.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RicoPaRico.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.RicoPaRico">
        <item name="android:windowBackground">@drawable/cupa_pizarras_splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CuadrosEnsayo" parent="Theme.RicoPaRico">
        <item name="android:textColor">@color/textTitulosColor</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
    </style>

    <style name="titulo_caja_ensayos" parent="Theme.RicoPaRico">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="numero_caja_ensayos" parent="Theme.RicoPaRico">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/textTitulosColor</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name="spinner_caja_ensayos" parent="Theme.RicoPaRico">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/textTitulosColor</item>
        <item name="android:textColor">@color/textTitulosColor</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="hint_caja_ensayos" parent="Theme.RicoPaRico">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.RicoPaRico">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>

        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/primaryDarkColor</item>

        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@null</item>

        <!-- Size -->
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>

        <!-- Other stuff -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dashboard_caja_titulos" parent="Theme.RicoPaRico">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="dashboard_caja_hint" parent="Theme.RicoPaRico">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="loading" parent="Theme.RicoPaRico">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="responsable" parent="Theme.RicoPaRico">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">12sp</item>
        <item name="iconSize">9dp</item>
    </style>

</resources>